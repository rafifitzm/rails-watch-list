<div class="container py-5">
  <div class="row justify-content-center mb-5">
    <div class="col-10">
      <div class="card" style="height: 400px;">
        <%= image_tag "cinema-seats.jpg", alt: "Cinematic rows of deep red cinema seats", class: "img-fluid object-fit-cover rounded card-img h-100" %>
        <div class="card-img-overlay d-flex flex-column justify-content-center align-items-center">
          <h1 class="p-2 text-info-emphasis bg-info-subtle fw-bold">Your lists</h1>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row py-3">
    <% @lists.each_with_index do |list, i| %>
      <div class="col-4 mb-3">
        <div class="card">
          <%= image_tag @images[i % @lists_length], alt: "Cinematic projector with smoke and light", class: "card-img img-fluid rounded" %>
          <div class="card-img-overlay d-flex flex-column justify-content-center align-items-center">
            <%= link_to list.name, list_path(list), class: "btn text-info-emphasis bg-info-subtle" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row justify-content-center pb-3">
    <div class="col-4">
      <%= link_to "Create a New List", new_list_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>
